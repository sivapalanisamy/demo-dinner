{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
           "type": "image_picker",
           "id": "titleimage",
           "label": "Image"
      },
		{
          	"id": "social_widget_id",
            "type": "text",
            "label": "Make section margins the same as theme",
            "default": "none"
        },
		{
          	"id": "social_product_id",
            "type": "text",
            "label": "Make section margins the same as theme",
            "default": "none"
        },
		{
          	"id": "social_widget_type",
            "type": "text",
            "label": "Make section margins the same as theme",
            "default": "none"
        }
	],
	"blocks": [
      {
        "type": "@app"
      }
    ]
  }
{% endschema %}
{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}

{% if section.settings.social_widget_type == "product" %}
<div class="social-widget-product-wrapper" data-product-id="{{ product.id }}"></div>
{% else %}
<div class="share-love-blk">
    <div class="shopify-section spaced-section page-width share-love-section">
        <div class="title-img">
          <img src="{{section.settings.titleimage | img_url: 'master'}}"  loading="lazy" width=""   height="">
        </div>
        <div class="social-widget-wrapper" data-widget-id="{{ section.settings.social_widget_id }}"></div>
    </div>
  </div>
{% endif %}