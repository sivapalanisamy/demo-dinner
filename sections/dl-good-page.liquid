<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'dl-about.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'dl-about.css' | asset_url | stylesheet_tag }}</noscript>
{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

<div class="siba about-container">
  <div class="page-width">
  <h1 class="main-page-title page-title h0">
    {{ page.title | escape }}
  </h1>
  <div class="service-content">
      {{section.settings.dlcontent}}
    {%- if section.settings.button_label != blank -%}
    	<a href="{{section.settings.button_link}}" class="button button--green">{{section.settings.button_label}}</a>
    {%- endif -%}
  </div>
  </div>  
</div>

{% schema %}
{
  
  "name": "dl",
   "settings": [
        {
          "type": "richtext",
          "id": "dlcontent",
          "label": "Description"
        },
        {
           "type": "url",
           "id": "button_link",
           "label": "Button link"
         },
         {
           "type": "text",
           "id": "button_label",
           "label": "Button label"
         },
        {
          "type": "text",
          "id": "heading",
          "label": "Title"
        },
		{
          "type": "richtext",
          "id": "content",
          "label": "Sustainability Description"
        }
	],
   "blocks": [
		{
       "name": "aboutImageWithText",
       "type": "imagewithText",
		"settings": [
            {
              "type": "select",
              "id": "layout",
              "options": [
                {
                  "value": "image_first",
                  "label": "t:sections.image-with-text.settings.layout.options__1.label"
                },
                {
                  "value": "text_first",
                  "label": "t:sections.image-with-text.settings.layout.options__2.label"
                }
              ],
              "default": "image_first",
              "label": "t:sections.image-with-text.settings.layout.label",
              "info": "t:sections.image-with-text.settings.layout.info"
            },
			{
             "type": "image_picker",
             "id": "image",
             "label": "image"
           },
           
           {
             "type": "text",
             "id": "Heading",
             "label": "Heading"
           },
            {
             "type": "image_picker",
             "id": "icon",
             "label": "icon"
           },
           {
             "type": "richtext",
             "id": "content",
             "label": "Description"
           },
			{
             "type": "text",
             "id": "button_label",
             "label": "Button label"
           },
           {
             "type": "url",
             "id": "button_link",
             "label": "Button link"
           }
         
		]
           
        }
    ]
}
{% endschema %}
