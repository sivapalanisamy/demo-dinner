<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'dl-press.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

<div class="page-width press-container">
  <h1 class="main-page-title page-title h0">
    {{ page.title | escape }}
  </h1>
  <div class="press-selection">
    <ul class="grid grid--1-col grid--3-col-tablet grid--3-col-desktop">
      {%for block in section.blocks %}
      <li class="grid__item">
        <div class="news-list">
          <img src="{{block.settings.picture | img_url: 'master'}}"  loading="lazy" width=""   height="">
           <p>{{block.settings.tagline}}</p>
          <h3>{{block.settings.title}}</h3>
          
          {%- if block.settings.button_label != blank -%}
            <div class="press-btn">
              <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="button" {{ block.shopify_attributes }}>
                {{ block.settings.button_label | escape }}
              </a>
            </div>
            {%- endif -%}
          
        </div>
      </li>
      {%endfor%}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "Press",
  "tag": "section",
  "class": "spaced-section",
   "blocks": [
		{
       "name": "Add News",
       "type": "imagewithText",
		"settings": [
			{
             "type": "image_picker",
             "id": "picture",
             "label": "Picture"
           },
           
           {
             "type": "text",
             "id": "title",
             "label": "Title"
           },
			{
             "type": "text",
             "id": "tagline",
             "label": "Tag Line"
           },
           {
             "type": "url",
             "id": "button_link",
             "label": "Button link"
           },
           {
             "type": "text",
             "id": "button_label",
             "label": "Button label"
           }
         
		]
           
        }
    ]
}
{% endschema %}
