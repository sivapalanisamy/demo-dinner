<h5>{{section.settings.headinglabel}}</h5>
{%for block in section.blocks %}
	<div class="easy-col">
      	<img src="{{block.settings.image | img_url: 'master'}}"
         <h2>{{block.settings.imageHeading}}</h2>
		<p>{{block.settings.imageDescription}}</p>
	</div>
{%endfor%}

{% schema %}
  {
    "name": "Easy peasy block",
    "settings": [
					{
						"type":"text",
						"label":"Enter heading label",
						"id": "headinglabel"
					}
				],
	"blocks": [
     {
       "name": "Easy block",
       "type": "image",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
		 {
           "type": "text",
           "id": "imageHeading",
           "label": "Enter Title"
         },
		 {
           "type": "richtext",
           "id": "imageDescription",
           "label": "Enter Description"
         }
       ]
     }
	]
  }
{% endschema %}

