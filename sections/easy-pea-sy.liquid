<div class="shopify-section spaced-section page-width easy-pea-section">
<div class="title-img">
  <img src="{{section.settings.titleimage | img_url: 'master'}}"  loading="lazy" width=""   height="">
</div>
<h5>{{section.settings.headinglabel}}</h5>
<ul class="grid grid--2-col grid--2-col-tablet grid--4-col-desktop easy-mobile-slider">

{%for block in section.blocks %}
	<li class="grid__item easy-col">
      <div class="easy-blk">
        <div class="img-blk">
        	<img src="{{block.settings.image | img_url: 'master'}}"  loading="lazy" width=""   height="">
        </div>
         <h2>{{block.settings.imageHeading}}</h2>
         <div class="content-blk">
            <div class="left">
                {{block.settings.imageDescription}}
            </div>
            <div class="right">
                <img src="{{block.settings.easyIcon | img_url: 'master'}}"  loading="lazy" width=""   height="">
            </div>
         </div>
		    
      </div>
  </li>

{%endfor%}
</ul>
</div>
{% schema %}
  {
    "name": "Easy peasy block",
    "class":"bg-container",
    "settings": [
          {
           "type": "image_picker",
           "id": "titleimage",
           "label": "Image"
         },
					{
						"type":"text",
						"label":"Enter heading label",
						"id": "headinglabel"
					}
				],
	"blocks": [
     {
       "name": "Easy block",
       "type": "image",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
		 {
           "type": "text",
           "id": "imageHeading",
           "label": "Enter Title"
         },
		 {
           "type": "richtext",
           "id": "imageDescription",
           "label": "Enter Description"
         },
         {
           "type": "image_picker",
           "id": "easyIcon",
           "label": "icons"
         }
       ]
     }
	]
  }
{% endschema %}


{% javascript %}
var w = screen.width;
if(w < 749){
  $('.easy-mobile-slider').slick({
      infinite: true,
      speed: 500,
      arrows: false,
      centerMode: true,
      centerPadding: '20px',
      slidesToShow: 1
  });
}
{% endjavascript %}
