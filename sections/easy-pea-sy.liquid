<div class="shopify-section spaced-section page-width easy-pea-section">

<h5>{{section.settings.headinglabel}}</h5>
<ul class="grid grid--2-col grid--4-col-tablet grid--4-col-desktop">

{%for block in section.blocks %}
	<li class="grid__item easy-col">
      <div class="easy-blk">
      	<img src="{{block.settings.image | img_url: 'master'}}"  loading="lazy" width=""   height="">
         <h2>{{block.settings.imageHeading}}</h2>
		    <p>{{block.settings.imageDescription}}</p>
      </div>
  </li>

{%endfor%}
</ul>
</div>
{% schema %}
  {
    "name": "Easy peasy block",
    "settings": [
					{
						"type":"text",
						"label":"Enter heading label",
						"id": "headinglabel"
					}
				],
	"blocks": [
     {
       "name": "Easy block",
       "type": "image",
       "settings": [
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         },
		 {
           "type": "text",
           "id": "imageHeading",
           "label": "Enter Title"
         },
		 {
           "type": "richtext",
           "id": "imageDescription",
           "label": "Enter Description"
         }
       ]
     }
	]
  }
{% endschema %}

